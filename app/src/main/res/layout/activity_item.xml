<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.adriana.target.ActivityItem">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

    <Spinner
        android:id="@+id/activity_item_spinner1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/spinner1"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">
    </Spinner>

    <EditText
        android:id="@+id/activity_item_titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="TÃ­tulo"/>

    <Spinner
        android:id="@+id/activity_item_spinner2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"></Spinner>

    <Spinner
        android:id="@+id/activity_item_spinner3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"></Spinner>

    </LinearLayout>

    <Button
        android:id="@+id/activity_item_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SAVE"
        android:padding="10dp" />

</LinearLayout>
